<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="view_payment_term_line_form" model="ir.ui.view">
            <field name="name">account.payment.term.line.form</field>
            <field name="model">account.payment.term.line</field>
            <field name="inherit_id" ref="account.view_payment_term_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='value']" position="after">
                    <field name="start_day" attrs="{'invisible': [('option','!=', 'chinese_month_pay')]}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
